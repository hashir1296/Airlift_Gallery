<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.airlift.android.modules.splash.view.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.airlift.android.modules.home.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_clothingListFragment"
            app:destination="@id/curatedPhotosListFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_photoDetailFragment"
            app:destination="@id/photoDetailFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/curatedPhotosListFragment"
        android:name="com.airlift.android.modules.curatedList.view.CuratedPhotosListFragment"
        android:label="CuratedPhotosListFragment"
        tools:layout="@layout/fragment_curated_photos_list">

        <action
            android:id="@+id/action_clothingListFragment_to_clothingDetailFragment"
            app:destination="@id/clothingDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/clothingDetailFragment"
        android:name="com.airlift.android.modules.myCollection.view.MyCollectionFragment"
        android:label="ClothingDetailFragment">

        <argument
            android:name="brandName"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="url"
            app:argType="string"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailFragment"
        android:name="com.airlift.android.modules.detail.view.PhotoDetailFragment"
        android:label="PhotoDetailFragment">
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

</navigation>