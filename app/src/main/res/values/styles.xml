<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--Windows decor-->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>

    </style>

    <style name="collapsing_toolbar_collapsed_title_style">
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="collapsing_toolbar_expanded_title_style">
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tab_item_text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="roboto_thin_12sp">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="roboto_regular_12sp">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="roboto_regular_14sp">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="roboto_regular_16sp">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="roboto_medium_14sp">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="roboto_medium_16sp">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="roboto_bold_14sp">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="roboto_bold_16sp">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>