<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp" android:tag="layout/holder_clothing_item_grid_view_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/dummy_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="@id/ivImageView"
            app:layout_constraintStart_toStartOf="@id/ivImageView"
            app:layout_constraintTop_toBottomOf="@id/ivImageView"
            tools:text="L-Green-Jacquard-Kurti" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:tag="binding_1"                   
            android:textColor="@color/gray"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/tvSalePrice"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/ivImageView"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"
            tools:text="Rs.1,680" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/ivImageView"
            app:layout_constraintStart_toEndOf="@id/tvOriginalPrice"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"
            tools:text="Rs.1,512" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         